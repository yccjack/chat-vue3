{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Y-Chat",
  "version": "0.4.7",
  "identifier": "com.gschaos.chat",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npx vite",
    "beforeBuildCommand": "npx vite build"
  },
  "app": {
    "windows": [
      {
        "title": "Y-Chat",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "visible": true,
        "center": true,
        "closable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "language": "zh-CN"
      }
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDc5MDQ5RUM3NkZFNDA5QjMKUldTekNlUnZ4NTRFZVc3TmgzZXpic29uTlpmNnIxc29TZDNyNnZCK2krRUJubWZKbHRYR09oaE0K",
      "endpoints": [
        "https://gschaos.club/update_file/update.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}