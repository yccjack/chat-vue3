{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "chatAi",
  "version": "0.1.1",
  "identifier": "com.gschaos.chat",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:8077",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },

  "app": {
    "windows": [
      {
        "title": "chat-y",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDkxOUNBNjZENjA1REMwMTkKUldRWndGMWdiYWFja2R4NjFMR0VoQ2Y4eXg2TnpQbytIS0EvMktyRWIwZzlrMU5Ub0hSMnZtaGYK",
      "endpoints": [
        "https://gschaos.club/update_file/update.json"
      ],
      "windows": {
        "installMode": "basicUi"
      }
    }
  }
}
